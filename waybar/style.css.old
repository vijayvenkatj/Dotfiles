* {
	font-size: 20px;
	font-family: monospace;
}

window#waybar {
	background: #181818; /* Darker background with transparency */
	color: #fdf6e3;
}

#custom-right-arrow-dark,
#custom-left-arrow-dark {
	color: #333333; /* Darker color */
}
#custom-right-arrow-light,
#custom-left-arrow-light {
	color: #1a1a1a; /* Darker color */
	background: #333333; /* Darker background */
}

#workspaces,
#clock.1,
#clock.2,
#clock.3,
#pulseaudio,
#memory,
#cpu,
#battery,
#disk,
#tray {
	background: transparent;
}

#workspaces button {
	padding: 0 2px;
	color: #fdf6e3;
}
#workspaces button.focused {
	color: #268bd2;
}
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}
#workspaces button:hover {
	background: #1a1a1a; /* Keep the same */
	border: #1a1a1a; /* Keep the same */
	padding: 0 3px;
}

#pulseaudio {
	color: #0077cc; /* Darker color */
}
#memory {
	color: #009688; /* Darker color */
}
#cpu {
	color: #5e4c9f; /* Darker color */
}
#battery {
	color: #657b83; /* Darker color */
}
#disk {
	color: #b58900; /* Darker color */
}

#clock,
#pulseaudio,
#memory,
#cpu,
#battery,
#disk {
	padding: 0 10px;
}
#power {
  color: #000000;
  background: #181818
}
